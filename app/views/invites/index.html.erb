<div class="container">
  <div class="row">
    <div class="col-md-12">
    <%= link_to  "Add people", new_invite_path, class: "btn btn-primary mb-5" %>
      <% @invites.each do |invite| %>
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= invite.name  %> ( <%= invite.email %> )
            
            <%= link_to  "Edit", edit_invite_path(invite), class: "btn btn-primary btn-sm"  %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>