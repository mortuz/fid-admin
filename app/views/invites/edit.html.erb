<%= render 'shared/errors', obj: @invite %>
<div class="card-container">
  <div class="card form-card mt-5">
    <div class="card-header">
      <h2>Edit people</h2>
    </div>
    <div class="card-body">
      <%= form_for @invite do |f| %>
  
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter your name"  %>
        </div>
  
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
            <%= f.text_field :email, class: "form-control", placeholder: "Enter your email"  %>
        </div>

        <div class="form-group">
          <label>
            <%= check_box_tag :send_email %> Select if you want to resend email requesting password reset to user.
          </label>
        </div>
  
        <%= f.submit "Save", class: "btn btn-outline-dark" %>
      <% end %>
      <%= link_to  "Cancel", invites_path, class: "btn btn-link pl-0" %>
    </div>
  </div>
</div>