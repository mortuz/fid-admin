<%= form_for :mailer, url: 'mailer', methid: 'post' do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Send email to anyone</h2>
        
          <div class="form-group row">
        
            <div class="col-sm-2">
              <%= f.label :email, class: "col-form-label" %>
            </div>
        
            <div class="col-sm-8">
              <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
            </div>
          </div>
        
          <div class="form-group row">
        
            <div class="col-sm-2">
              <%= f.label :subject, class: "col-form-label" %>
            </div>
        
            <div class="col-sm-8">
              <%= f.text_field :subject, class: "form-control", placeholder: "Email subject" %>
            </div>
          </div>
        
          <div class="form-group row">
        
            <div class="col-sm-2">
              <%= f.label :message, class: "col-form-label" %>
            </div>
        
            <div class="col-sm-8">
              <%= f.text_area :message, class: "form-control", placeholder: "Email body", rows: "5" %>
            </div>
          </div>
        
          <div class="form-group row">
            <div class="col-sm-8 offset-sm-2">
            </div>
          </div>
        
        
      </div>
    </div>
  </div>

  <div  class="navbar-light bg-light fixed-bottom" id="navigation" style="max-height:20vh;">

    <div  class="container-fluid">
      <div  class="row">
        <div  class="col-6">
          <div  class="d-flex justify-content-start">
            <div  class="p-2">
              <%= link_to invites_path, class: "btn btn-outline-dark" do %>
                <i  class="material-icons">arrow_back</i>
              <% end %>
            </div>
          </div>
        </div> 

        <div  class="col-6">
            <div  class="d-flex justify-content-end">
              <div  class="p-2">
              <%= form_for( :bulk ) do |f| %>
                <%= f.hidden_field :data, id: "form-data" %>
                <%= button_tag class: "btn submit-btn btn-outline-dark" do%>
                  <i  class="material-icons">arrow_forward</i>
                <% end %>
              <% end %>
                
              </div>
            </div>
        </div> 
      </div> 
    </div> 
  </div>
<% end %>