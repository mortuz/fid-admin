<% if obj.errors.any?  %>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="card text-danger border-danger">
        
        <div class="card-body">
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>